<h1><%= @product.name %></h1>

<ol class="colors">
<% @product.colors.each do |color| %>
  <li>
    Color: <%= color.name %>
    <ol class="sizes">
      <% color.sizes.each do |size| %>
        <li>Size: <%= size.name %></li>
      <% end %>
    </ol>
  </li>
<% end %>
</ol>

<%= link_to 'Edit', edit_product_path(@product) %> |
<%= link_to 'Back to Products', products_path %>
