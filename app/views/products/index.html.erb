<h1>Products</h1>
<table class="pretty">
  <tr>
    <th>Name</th>
    <th>Description</th>
    <th>Color</th>
    <th>Size</th>
    <th>Quantity</th>
  </tr>
  <% for size in @sizes %>
  <tr>
      <td><%= link_to size.color.product.name, size.color.product %></td>
      <td><%= size.color.product.description %></td>
      <td><%= size.color.name %></td>
      <td><%= size.name %></td>
      <td><%= size.quantity %></td>
    <% end %>
  </tr>
</table>

<p><%= link_to "New Product", new_product_path %></p>
